
<div class="container_user_show">

    <h1 class='books'><%=@user.first_name%></h1>
    <hr>

    <h3 id="read"> Shelf- <em>Read</em>  </h3>
    <table>
        <thead>
            <th>Title</th><th>Author</th>
        </thead>
        <tbody>
            <%if @user.books_read %>
            <% @user.books_read.each do |book| %>
                <tr>
                    <td><a href="/books/<%=book.id%>"><%=book.title %></a></td>
                    <td><%=book.author %></td>
                </tr>
            <%end%>
            <%end%>
        </tbody>
    </table>

    <h3 id="interested"> Shelf- <em>Read-to</em>  </h3>
    <table>
        <thead>
            <th>Title</th><th>Author</th><th>           </th>
        </thead>
        <tbody>
            <%if @user.books_interested %>
            <% @user.books_interested.each do |book| %>
                <tr>
                    <td><a href="/books/<%=book.id%>"><%=book.title %></a></td>
                    <td><%=book.author %></td>
                </tr>
            <%end%>
            <%end%>
        </tbody>
    </table>
    <h3 id="current"> Shelf- <em>Currently Reading</em>  </h3>
    <table>
        <thead>
            <th>Title</th><th>Author</th><th>           </th>
        </thead>
        <tbody>
            <%if @user.books_current %>
            <% @user.books_current.each do |book| %>
                <tr>
                    <td><a href="/books/<%=book.id%>"><%=book.title %></a></td>
                    <td><%=book.author %></td>

                    <!--Finished Book Button (For current_user's profile page only) Deletes book from current and adds to already read-->
                    <td><%if @user == current_user %>
                    <form action="/currents/<%=@user.currents.where(book:book)[0].id%>" method="post">
                        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
                        <input type="hidden" name="_method" value="delete">
                        <input type="hidden" name="book_id" value="<%=book.id%>">
                        <input type="submit" value="Finished Reading">
                    </form>
                    <% end %></td>
                </tr>
            <%end%>
            <%end%>
        </tbody>
    </table>



    <h3 id="comments"> Books Reviewed: </h3>
    <table>
        <thead>
            <th>Title</th><th>Author</th>
        </thead>
        <tbody>
            <%if @user.books_commented %>
            <% @user.books_commented.each do |book| %>
                <tr>
                    <td><a href="/books/<%=book.id%>"><%=book.title %></a></td>
                    <td><%=book.author %></td>
                </tr>
            <%end%>
            <%end%>
        </tbody>
    </table>


    
</div>
<!-- end of container -->




