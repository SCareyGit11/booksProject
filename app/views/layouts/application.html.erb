<!DOCTYPE html>
<html>
  <head>
    <title>BooksProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if current_user %>

    <div class='nav'>

      <a href="/books">Home</a>
        <a href="/users/<%=current_user.id%>">My Books</a>
        <a href="/users/<%=current_user.id%>/edit">Edit your Profile</a>
        <a href="/books/new">Create a new book in the database</a>


        <form id='logout' action='/sessions/<%=session[:user_id]%>' method='post'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Log Out" >
      </form>

      
    </div>
    <div class='user'>
      
        <h4> <span style=""><%=current_user.first_name%></span> <img style="vertical-align:middle" height="50px" width="50px" src="/assets/book.jpeg" alt="book" /></h4>
    </div>
    



  	<% end %>
    <%= yield %>
  </body>
</html>
